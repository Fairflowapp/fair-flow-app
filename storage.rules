rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Public read for logo images inside "public/"
    match /public/{allPaths=**} {
      allow read;
    }

    // Everything else locked
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}

